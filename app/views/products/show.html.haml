.usa-grid
  .product-nav
    = link_to t(".products"), products_path
    %i.fa.fa-caret-right
    = @product.name

  %aside.product-sidebar
    = render "product_sidebar",
      product: @product,
      product_request: @product_request
  %section.product-content
    = render "product_content", product: @product

.overlay.modal-close
= render "government_user_modal"

